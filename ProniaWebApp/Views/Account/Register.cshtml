@using ProniaWebApp.ViewModels.Account;
@model RegisterVM
      <!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login & Register Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Login | Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Login</h4>
                            <div class="row">
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="Name"> Name</label>
                                    <input class="mb-0 form-control" type="text" id="name"
                                           placeholder="Enter your full name" asp-for="Name" placeholder="Enter your name">
                                    <span asp-validation-for="Name" style="color:red"></span>
                                </div>
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="Surname"> Surname</label>
                                    <input class="mb-0 form-control" type="text" id="name"
                                           placeholder="Enter your full name" asp-for="Surname" placeholder="Enter your Surname">
                                    <span asp-validation-for="Surname" style="color:red"></span>
                                </div>
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="Username">Username</label>
                                    <input class="mb-0 form-control" type="text" id="name"
                                           placeholder="Enter your username" asp-for="Username" placeholder="Enter your username">
                                    <span asp-validation-for="Username" style="color:red"></span>
                                </div>
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" class="mb-0 form-control" type="text" id="name"
                                           placeholder="Enter your Email" placeholder="Enter your Email">
                                    <span asp-validation-for="Email" style="color:red"></span>
                                </div>
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" class="mb-0 form-control" id="name"
                                           placeholder="Enter your Password" placeholder="Enter your Password">
                                    <span asp-validation-for="Password" style="color:red"></span>
                                </div>
                                <div class="col-md-12 col-12 mb--15">
                                    <label asp-for="RepeatPassword">Repeat Password</label>
                                    <input asp-for="RepeatPassword" class="mb-0 form-control" id="name"
                                           placeholder="Please Repeat The Password" placeholder="Please Repeat The Password">
                                    <span asp-validation-for="RepeatPassword" style="color:red"></span>
                                </div>
                                <div class="col-lg-12 pt-5" asp-validation-summary="All">
                                    <button asp-action="Register" asp-controller="Account" class="btn btn-outlined">Register</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->